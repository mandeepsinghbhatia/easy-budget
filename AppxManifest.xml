<?xml version="1.0" encoding="utf-8"?>
<Package
  xmlns="http://schemas.microsoft.com/appx/manifest/foundation/windows10"
  xmlns:uap="http://schemas.microsoft.com/appx/manifest/uap/windows10"
  xmlns:uap3="http://schemas.microsoft.com/appx/manifest/uap/windows10/3"
  IgnorableNamespaces="uap uap3">

  <Identity
    Name="SciEngineer.Easy-Budget-Sim"
    Publisher="CN=4DEBF528-4A2C-406C-8ED5-D23270EB4A9A"
    Version="1.1.0.0" />

  <Properties>
    <DisplayName>Easy Budget Sim</DisplayName>
    <PublisherDisplayName>SciEngineer</PublisherDisplayName>
    <Logo>assets\StoreLogo.png</Logo>
  </Properties>

  <Dependencies>
    <TargetDeviceFamily Name="Windows.Universal" MinVersion="10.0.17763.0" MaxVersionTested="10.0.19041.0" />
  </Dependencies>

    <Resources>
        <Resource Language="en-US" />
    </Resources>

    <Applications>
        <Application Id="App"
                     StartPage="https://mandeepsinghbhatia.github.io/easy-budget/">

            <uap:VisualElements
                    DisplayName="Easy Budget Sim"
                    Description="Easy budget creation"
                    BackgroundColor="#ffffff"
                    Square150x150Logo="assets\Square150x150Logo.png"
                    Square44x44Logo="assets\Square44x44Logo.png">
                <uap:DefaultTile Wide310x150Logo="assets\Wide310x150Logo.png" />
                <uap:SplashScreen Image="assets\SplashScreen.png" />
            </uap:VisualElements>

            <uap:ApplicationContentUriRules>
                <uap:Rule Type="include" Match="https://mandeepsinghbhatia.github.io/easy-budget/" WindowsRuntimeAccess="all" />
				<uap:Rule Type="include" Match="https://cdn.jsdelivr.net/" WindowsRuntimeAccess="none" />
		   </uap:ApplicationContentUriRules>

        </Application>
    </Applications>

  <Capabilities>
      <Capability Name="internetClient" />
  </Capabilities>
</Package>
